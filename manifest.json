{
  "manifest_version": 3,
  "name": "Network Capture Inspector",
  "version": "1.0.0",
  "description": "Capture and inspect XHR/Fetch network requests like a developer inspector tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "content/screenshot-selector.js", "sidepanel/sidepanel.html", "sidepanel/sidepanel.css", "sidepanel/sidepanel.js", "sidepanel/fabric.min.js", "console-viewer/console-viewer.html", "console-viewer/console-viewer.css", "console-viewer/console-viewer.js", "markup-viewer/markup-viewer.html", "markup-viewer/markup-viewer.css", "markup-viewer/markup-viewer.js", "markup-viewer/fabric.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
